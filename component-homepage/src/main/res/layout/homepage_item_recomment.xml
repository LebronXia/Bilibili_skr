<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/index_card_radius"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/ucrop_shadow_upside"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:id="@+id/tv_play_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="1.3ä¸‡"
                android:drawableLeft="@drawable/bangumi_common_ic_video_views"
                android:drawablePadding="3dp"
                android:layout_marginBottom="@dimen/margin_min"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/bg_white"
                />

            <TextView
                android:id="@+id/tv_reply_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_play_amount"
                android:text="242"
                android:drawableLeft="@drawable/bangumi_common_ic_video_danmakus"
                android:drawablePadding="3dp"
                android:layout_marginBottom="@dimen/margin_min"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/bg_white"
                />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="3:12"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/bg_white"
                android:layout_marginBottom="@dimen/margin_min"
                android:layout_marginRight="@dimen/margin_tiny"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_tiny"
            android:textSize="14sp"
            android:lines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:paddingBottom="@dimen/padding_12"
            android:paddingTop="@dimen/padding_12"
            android:textSize="14sp"
            android:lines="2"
            android:textColor="@color/_text__white_dark"
            android:ellipsize="end"
            />


    </LinearLayout>


</android.support.v7.widget.CardView>